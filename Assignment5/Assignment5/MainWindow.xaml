<Window x:Class="Assignment5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5"
        mc:Ignorable="d"
        Title="Star Games" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="Images/StarField.jpg"/>
    </Window.Background>
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <Label Content=" Star&#10;Games" FontFamily="/Assignment5;component/Fonts/#Star Jedi Rounded" FontSize="120" HorizontalContentAlignment="Center" Foreground="#FFF3FF00"/>

        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btnPlayGame" Content="Play Game" Margin="20" Click="btnPlayGame_Click"/>

            <Button Name="btnHighScores" Content="High Scores" Margin="20" Click="btnHighScores_Click"/>

            <Button Name="btnEnterUserInfo" Content="Enter User Info" Margin="20" Click="btnEnterUserInfo_Click"/>

        </WrapPanel>

    </StackPanel>

</Window>
