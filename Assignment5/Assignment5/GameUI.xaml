<Window x:Class="Assignment5.GameUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5"
        mc:Ignorable="d"
        Title="Game" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="Images/StarField.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <StackPanel>
            <Label Name="lblScore" Content="Score: 0" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Name="lblSolveProblem" Content="Solve the problem: " />
            <Label Name="lblProblem" Content="1 + 1 = "  HorizontalAlignment="Center"/>
            <TextBox Name="txtAnswer" Height="30" Width="60" ForceCursor="True" />
            <WrapPanel HorizontalAlignment="Center" Margin="10">
                <Button Name="btnGameSubmit" Content="Submit" IsDefault="True" Click="btnGameSubmit_Click" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
